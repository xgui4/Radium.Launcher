<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Radium_Launcher_Resharped.MainWindow"
        Title="Radium_Launcher_Resharped">
	<Window.Background>
		<ImageBrush Source="/Assets/bg.png" Stretch="Fill"/>
	</Window.Background>
	<StackPanel>
		<TextBlock Text="Radium Launcher" HorizontalAlignment="Center"
	VerticalAlignment="Center"/>
		<Button Click="ClickHandler">Hello World</Button> 
		<TextBlock Margin="0 10" Name="message">Ready...</TextBlock>
		<Button Click="ClickMinecraftJava">
			<Button.Content>
				<Image Source="/Assets/grass_dirt.png" Width="50" Height="50"/>
			</Button.Content>
		</Button>
		<Button Click="ClickMinecraftBedrock">
			<Button.Content>
				<Image Source="/Assets/grass_dirt.png" Width="50" Height="50"/>
			</Button.Content>
		</Button>
		<Button Click="ClickMinecraftModrinth">
			<Button.Content>
				<Image Source="/Assets/grass_dirt.png" Width="50" Height="50"/>
			</Button.Content>
		</Button>
		<Button Click="ClickMinecraftAmythyst">
			<Button.Content>
				<Image Source="/Assets/grass_dirt.png" Width="50" Height="50"/>
			</Button.Content>
		</Button>
	</StackPanel>
</Window>
